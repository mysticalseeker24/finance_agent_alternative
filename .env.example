# API Keys
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key  # Required for GPT-4.1 integration
# Specifies the OpenAI chat model for LanguageAgent (e.g., gpt-4o, gpt-4o-mini, gpt-3.5-turbo)
OPENAI_CHAT_MODEL_NAME=gpt-4o
ANTHROPIC_API_KEY=your_anthropic_api_key  # Optional alternative LLM
# For using local models (optional)
# LOCAL_MODEL_PATH=/path/to/local/model
# LLM provider to use (openai, anthropic, or local)
LLM_PROVIDER=openai

# Voice API Keys
SARVAM_AI_API_KEY=your_sarvam_ai_api_key  # Primary TTS service
ELEVENLABS_API_KEY=your_elevenlabs_api_key  # Alternative TTS service

# Firecrawl API Key
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Database Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # Leave empty for no password

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Scheduling
TIMEZONE=Asia/Kolkata
MARKET_BRIEF_HOUR=8
MARKET_BRIEF_MINUTE=0

# FastAPI Settings
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Streamlit Settings
STREAMLIT_PORT=8501

# Model Settings
EMBEDDING_MODEL=roberta-large-nli-stsb-mean-tokens
# Optional secondary model for experimentation (e.g., re-ranking, alternative analysis, multilingual capabilities).
# Note: 'stsb-xlm-r-multilingual' also has 1024 dimensions, same as the primary model.
SECONDARY_EMBEDDING_MODEL=stsb-xlm-r-multilingual
VOICE_MODEL=meera
# Optional: Path to a fine-tuned Whisper model directory or Hugging Face Hub model name
# WHISPER_FINETUNED_MODEL_PATH=your/model/path/or/hf/model/name

# Portfolio Configuration
# Optional: Define a default portfolio as a JSON string. Ensure it's valid JSON.
# Example: DEFAULT_PORTFOLIO_JSON='[{"ticker": "AAPL", "weight": 0.25, "shares": 10}, {"ticker": "MSFT", "weight": 0.20, "shares": 8}, {"ticker": "GOOGL", "weight": 0.20, "shares": 5}, {"ticker": "AMZN", "weight": 0.20, "shares": 5}, {"ticker": "TSLA", "weight": 0.15, "shares": 3}]'
